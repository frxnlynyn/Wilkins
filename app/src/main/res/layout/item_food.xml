<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="28dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:background="#E9E9E9">

        <!-- Plate image placeholder (on the left top) -->
        <ImageView
            android:id="@+id/ivPlate"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_plate_placeholder"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:translationY="-18dp"
            android:translationX="8dp"/>

        <TextView
            android:id="@+id/tvFoodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salmon Salad"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvFoodDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salmon,radish,tomato, cabbage"
            android:textSize="12sp"
            android:layout_below="@id/tvFoodTitle"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/rounded_circle_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"/>

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_favorite"
            android:background="@drawable/rounded_circle_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
